# A typical Rakefile

PORT  = 6138
HOSTS = hostname1 hostname2 hostname3:6333

actionset3: # potato
    echo starting actionset3    # potato
    remote-cc [optional-flags] -c program.c # potato
        requires program.c program.h allfunctions.h # potato
    remote-cc [optional-flags] -c square.c  # potato
        requires square.c allfunctions.h    # potato
    remote-cc [optional-flags] -c cube.c    # potato
        requires cube.c allfunctions.h  # potato

actionset4:
    echo starting actionset4
    remote-cc [optional-flags] -o program program.o square.o cube.o
        requires program.o square.o cube.o